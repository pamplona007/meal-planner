{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "paths": {
         "@modules/*": ["/modules/*"],
         "@config/*": ["/config/*"],
         "@shared/*": ["/shared/*"],
         "@errors/*": ["/errors/*"],
         "@utils/*": ["/utils/*"]
      },
      "typeRoots": [
         "@types",
         "./node_modules/@types",
      ],
      "sourceMap": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
   }
}